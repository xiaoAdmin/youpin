<%@ page import="com.youpin.model.Goods"%><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"><html xmlns="http://www.w3.org/1999/xhtml"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /><title>优品特惠</title><g:javascript src="youpin.js" /><g:javascript library="jquery" plugin="jquery" /><link rel="elements"	href="${resource(dir: 'images', file: 'elements.png')}" /><link rel="main-head"	href="${resource(dir: 'images', file: 'main-head.png')}" /><link rel="stylesheet"	href="${resource(dir: 'css', file: 'goods-list.css')}" type="text/css" /><r:layoutResources /></head><body>	<input type="hidden" id="categoryId" name="categoryId" value="" />	<input type="hidden" id="orderBy" name="orderBy"		value="${params.orderBy }" />	<input type="hidden" id="priceTag" name="priceTag"		value="${params.priceTag}" />	<div class="top-nav"></div>	<div class="main-head">		<a class="logo" href="#"></a>		<div class="search">			<form action="#" accept-charset="utf-8" method="post">				<div class="search-fields">					<input type="text" id="query" name="q" value="" autocomplete="off"						class="hint"> <span>输入查询信息</span></input>				</div>				<input type="submit" id="offer-submit" name="q-submit"					class="search-submit"></input>			</form>		</div>		<div class="main-nav">			<div class="main-nav-content">				<div class="fl">					<a class="current" href="#">首页</a> <a href="#">天天特价</a> <a href="#">天猫精品</a>				</div>			</div>		</div>	</div>	<div class="container">		<div class="content">			<div class="strategy">				<ul>					<li class="${params.priceTag?'unselected':'current'}"><g:link							action="list">全部</g:link></li>					<li class="${params.priceTag=='10'?'current':'unselected'}"><g:link							action="list" params="[priceTag:'10']">                               9.9元包邮</g:link></li>					<li class="${params.priceTag=='20'?'current':'unselected'}"><g:link							action="list" params="[priceTag:'20']">19.9元包邮</g:link></li>				</ul>			</div>			<div class="filter">				<div class="filter-category">					<h3>分类：</h3>					<ul>						<li class="${params.categoryId?'split':'current'}" />						<li><g:link action="list"								params="${[orderBy:params.orderBy,priceTag:params.priceTag]}">全部</g:link>						</li>						<li class="${params.categoryId=='1'?'current':'split'}" />						<li><g:link action="list"								params="${[orderBy:params.orderBy,categoryId:'1',priceTag:params.priceTag]}">服装</g:link></li>						<li class="${params.categoryId=='2'?'current':'split'}" />						<li><g:link action="list"								params="${[orderBy:params.orderBy,categoryId:'2',priceTag:params.priceTag]}">鞋包</g:link></li>					</ul>				</div>				<div class="filter-sort">					<h3>排序：</h3>					<ul>						<li class="${params.orderBy == 'new'?'current':''}"><g:link								action="list"								params="${[orderBy:'new',categoryId:params.categoryId,priceTag:params.priceTag]}">最新</g:link></li>						<li class="${params.orderBy == 'renqi'?'current':'renqi'}"><g:link								action="list"								params="${[orderBy:'renqi',categoryId:params.categoryId,priceTag:params.priceTag]}">人气</g:link></li>						<li class="${params.orderBy == 'zhekou'?'current':'zhekou'}"><g:link								action="list"								params="${[orderBy:'zhekou',categoryId:params.categoryId,priceTag:params.priceTag]}">折扣</g:link></li>					</ul>				</div>			</div>			<div class="goods-list">				<ul class="goods-list-ul" id="goods-list-ul">					<g:render template="items" />				</ul>			</div>		</div>		<div id="loader">			<span>正在加载中...</span>		</div>		<div class="go-back">			<a href="#"></a>		</div>	</div>	<div class="footer">		<p></p>	</div>	<script type="text/javascript">var loader = new GoodsLoader(3, 9, ${goodsInstanceTotal})$(window)		.scroll(				function() {					if (loader.shouldLoad()) {						var onEdge = ($(window).scrollTop()								+ $(window).height() > $(document).height() - 200);						if (onEdge) {							loader.load();						}					}				})</script></body></html>