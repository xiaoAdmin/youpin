<g:each in="${goodsInstanceList}">	<li class="goods-item" data-id="1">		<div class="title">			${it.goodsName }		</div>		<div class="image">			<a href="${it.clickUrl}" target="_blank"> <img src="${it.picUrl}" />			</a>			<div class="mask"></div>			<div class="mask-content">				<span class="mask-label-left"><em>&nbsp;原价：¥${it.originalPrice }&nbsp;				</em> 4.2折&nbsp;&nbsp; </span> <span class="mask-label-right">已有<span					class="buy-no">2716</span>人抢购				</span>			</div>			<a href="${it.clickUrl}" target="_blank">				<div class="status-label">					<span class="price-info"> <em class="currency">¥</em> <em						class="price-number">							${it.promotionPrice }					</em>					</span>				</div>			</a>		</div>	</li></g:each>